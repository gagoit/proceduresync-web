#document_category_modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.resized-1
    .modal-content
      .modal-header
        %h3 #{t("document.assign_category.title")}
        = t("document.assign_category.description")
      .modal-body
        #term_conditions
          .container
            .panel-default
              .panel-body.panel-e
                %h4.text-primary #{t("document.form.category.title")}
                %form#document_category_form
                  .form-group
                    = render "select_categories", {current_cate_id: nil, can_add_edit_doc: true, categories: categories}

              .text-center
                %button.btn.btn-primary.btn-submit-modal#submit_update_category{:type => "submit", :'data-url' => update_category_documents_path} #{t("buttons.submit")}
                %a.underline-a-modal.text-muted{"data-dismiss" => "modal", :href => "javascript:;"}
                  %h5 #{t("buttons.cancel")}